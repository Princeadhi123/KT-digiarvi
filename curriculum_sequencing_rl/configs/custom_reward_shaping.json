{
  "environment": {
    "data_path": "../preprocessed_kt_data.csv",
    "reward_correct_w": 0.0,
    "reward_score_w": 1.0,
    "hybrid_base_w": 0.6,
    "hybrid_mastery_w": 0.8,
    "hybrid_motivation_w": 0.2,
    "rew_improve_w": 0.35,
    "rew_deficit_w": 0.35,
    "rew_spacing_w": 0.10,
    "rew_diversity_w": 0.05,
    "rew_challenge_w": 0.15,
    "ema_alpha": 0.3,
    "need_threshold": 0.6,
    "spacing_window": 16,
    "diversity_recent_k": 10,
    "challenge_target": 0.7,
    "challenge_band": 0.4,
    "invalid_penalty": -0.1,
    "seed": 123
  },
  "models": ["ql", "dqn", "a2c", "a3c", "ppo"],
  "q_learning": {
    "epochs": 10,
    "alpha": 0.15,
    "gamma": 0.95,
    "eps_start": 0.4,
    "eps_end": 0.0,
    "eps_decay_epochs": 6,
    "select_best_on_val": true,
    "val_episodes": 500
  },
  "dqn": {
    "episodes": 300,
    "lr": 3e-4,
    "gamma": 0.995,
    "batch_size": 256,
    "buffer_size": 60000,
    "hidden_dim": 256,
    "eps_start": 1.0,
    "eps_end": 0.02,
    "eps_decay_steps": 15000,
    "target_tau": 0.005,
    "target_update_interval": 1
  },
  "a2c": {
    "episodes": 300,
    "lr": 2e-4,
    "entropy_coef": 0.015,
    "value_coef": 0.6,
    "bc_warmup": 12,
    "bc_weight": 3.0,
    "batch_episodes": 8
  },
  "a3c": {
    "episodes": 300,
    "lr": 2e-4,
    "entropy_coef": 0.015,
    "value_coef": 0.6,
    "gae_lambda": 0.97,
    "bc_warmup": 12,
    "bc_weight": 3.0,
    "rollouts": 8
  },
  "ppo": {
    "episodes": 300,
    "lr": 2e-4,
    "clip_eps": 0.15,
    "epochs": 10,
    "batch_episodes": 20,
    "minibatch_size": 2048,
    "entropy_coef": 0.015,
    "value_coef": 0.6,
    "gae_lambda": 0.97,
    "bc_warmup": 12,
    "bc_weight": 3.0
  },
  "eval_episodes": 1000,
  "include_chance": true,
  "include_trivial": true,
  "include_markov": true,
  "metrics_csv": "custom_reward_shaping_results.csv"
}
